<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel= "stylesheet" href="main.css">
    <title>Reinbou Bakes | Cakes </title>
  </head>
  <body>
  <%= erb :"partials/nav" %>
<div class="cardrow">
    <div class="card mb-3 cards">
        <img  class="card-img-top cardimg" src="<%= @blue.image %>" alt="Card image cap" >
        <div class="card-body">
            <h5 class="card-title">Blueberry Muffin</h5>
            <p class="card-text">"<%= @blue.description %>"</p>
            <p class="card-text"><small class="text-muted">"<%= @blue.price %>"</small></p>
        </div>
        </div>
        <div class="card mb-3 cards">
        <img  class="card-img-top cardimg" src="<%= @blcr.image %>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Blueberry Cream Cheese Muffin</h5>
            <p class="card-text">"<%= @blcr.description %>"</p>
            <p class="card-text"><small class="text-muted">"<%= @blcr.price %>"></p>
        </div>
        </div>
        <div class="card mb-3 cards">
        <img  class="card-img-top cardimg" src="<%= @cinmon.image %>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Cinnamon Monkey Muffin</h5>
            <p class="card-text">"<%= @cinmon.description %>"</p>
            <p class="card-text"><small class="text-muted">"<%= @cinmon.price %>"</small></p>
        </div>
        </div>
</div>
  </body>
</html>