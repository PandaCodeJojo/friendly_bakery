<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel= "stylesheet" href="main.css">
    <title>Reinbou Bakes | Cakes </title>
  </head>
  <body>
  
  <%= erb :"partials/nav" %>
  </br>
  <div class="cardrow">
    <div class="card mb-3 cards">
        <img  class="card-img-top cardimg" src="<%= @red.image %>" alt="Card image cap" >
        <div class="card-body">
            <h5 class="card-title">Red Velvet Cake Bites</h5>
            <p class="card-text">"<%= @red.description %>"</p>
            <p class="card-text"><small class="text-muted">"<%= @red.price %>"</small></p>
        </div>
        </div>
        <div class="card mb-3 cards">
        <img  class="card-img-top cardimg" src="<%= @tir.image %>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Tiramasu</h5>
            <p class="card-text">"<%= @tir.description %>"</p>
            <p class="card-text"><small class="text-muted">"<%= @tir.price %>"></p>
        </div>
        </div>
        <div class="card mb-3 cards">
        <img  class="card-img-top cardimg" src="<%= @tres.image %>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Tres Leche</h5>
            <p class="card-text">"<%= @tres.description %>"</p>
            <p class="card-text"><small class="text-muted">"<%= @tres.price %>"</small></p>
        </div>
        </div>
</div>
  </body>
</html>